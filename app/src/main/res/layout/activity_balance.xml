<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".ui.YaFinaActivity">


    <LinearLayout
        android:id="@+id/balance_container"
        android:name="com.zavijavasoft.yafina.ui.BalanceFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/image_button_balance"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <ImageButton
        android:id="@+id/image_button_balance"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/colorBlack"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/btn_sum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/image_button_transactions" />

    <ImageButton
        android:id="@+id/image_button_transactions"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/colorBlack"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/btn_sum"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_button_balance"
        app:layout_constraintRight_toLeftOf="@id/image_button_settings" />


    <ImageButton
        android:id="@+id/image_button_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"

        android:background="@color/colorBlack"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/btn_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_button_transactions"
        app:layout_constraintRight_toLeftOf="@id/image_button_about" />


    <ImageButton
        android:id="@+id/image_button_about"
        style="@android:style/Widget.ImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/colorBlack"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/btn_about"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_button_settings"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
